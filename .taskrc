# Taskwarrior program configuration file.
# For more documentation, see https://taskwarrior.org or try 'man task', 'man task-color',
# 'man task-sync' or 'man taskrc'

# Set the default task color
include dark-16.theme

# Configure custom colors for different task priorities
color.priority.H=red
color.priority.M=yellow
color.priority.L=blue

# Enable the use of project hierarchies
project.hierarchy=yes

# Show the task ID, description, project, priority, and due date in the default report
report.default.columns=id,description,project,priority,due

# Sort the default report by due date, with tasks that are overdue appearing first
report.default.sort=due
report.default.sort.order=descending

# Set the default task priority to 'Medium'
default.priority=M

# Enable the use of task tags
tags=yes

# Enable the use of recurring tasks
recurrence=yes

# Set the default recurrence period to weekly
recurrence.default=weekly

# Enable the use of annotations
annotations=yes

# Case insensitive search
search.case.sensitive=no

# Set the default annotation date format
annotation.date.format=%Y-%m-%d %H:%M:%S

# Enable the use of dependencies
dependencies=yes